<% @photos.each do |photo| %>
  <tr>
    <td><%= image_tag photo.photo_attachment.url(:thumb) %></td>
    <td><%= photo.caption %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
  </tr>
<% end %>
</table>

